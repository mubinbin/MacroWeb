@{
    Layout = null;
}

@model MacroWeb.Models.Message

<form method="POST" onsubmit="return mespost(this);" asp-controller="Message" asp-action="ProcessSpiral">
    <div class="form-group">
        <textarea class="form-control" rows="4" id="message-text" name="SpiralContent" for="SpiralContent">Retweet Post</textarea>
    </div>
    <input type="hidden" name="UserId" for="UserId" value = "@ViewBag.curuser.UserId">
    <input type="hidden" name="CenterId" for="CenterId" value="@ViewBag.curMessage.MessageId">
    <input type="hidden" name="IsSpiral" for="IsSpiral" value="true">
    
    <input class="btn btn-primary w-100" type="submit" value="Retweet">
</form>
<div class="mt-3 border border-dark px-3 pt-2">
    <div class="font-weight-bold">
        <a class="text-primary" style="cursor: pointer;" onclick="showModal('/userdetail/@ViewBag.curMessage.Creator.UserId', '@ViewBag.curMessage.Creator.Name')">@ViewBag.curMessage.Creator.Name</a> - <span class="text-secondary">@ViewBag.curMessage.UpdatedAt</span>
    </div>
    <div class="py-2">@ViewBag.curMessage.MessageContent</div>
</div>