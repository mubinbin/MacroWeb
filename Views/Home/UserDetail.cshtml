@{
    Layout = null;
}
@model MacroWeb.Models.User
<div id="edit-profile">
@{
    if(ViewBag.UserToView.ImagePath == null)
    {
        <img class="rounded-circle d-block mx-auto" src="~/images/profile1.png" width="150" height="150">

    }else{
        <img class="rounded-circle d-block mx-auto" src="@ViewBag.UserToView.ImagePath" width="150" height="150">
    }
}


<div style="height: 30px; width: 50px; margin-left: 60%;" id="follow-icon">
    <partial name="_Follow" view-data="ViewData"/>
</div>
    
    @{
        if(ViewBag.UserToView == ViewBag.curuser)
        {
        <h5 style="width: 150px;" class="mx-auto text-center">@ViewBag.curuser.Name <a style="cursor: pointer; color: gray; text-decoration: none;" onclick="editprofile('/editprofile')"> <i title="Edit Profile" class="fas fa-pencil-alt"></i></a></h5>
        }
    }
</div>


<div class="d-flex justify-content-around">
    <p class="col-sm-4"><span style="font-weight-bold; color: orange;">@ViewBag.UserToView.UsersFollowed.Count</span> <span style="color: darkblue;">Following</span></p>
    <p class="col-sm-4"><span style="font-weight-bold; color: orange;">@ViewBag.UserToView.Followers.Count</span> <span style="color: darkblue;">Followers</span></p>
</div>
<p style="text-align: center; font-weight-bold;">Joined @ViewBag.UserToView.CreatedAt.ToString("MMMM yyyy")</p>


